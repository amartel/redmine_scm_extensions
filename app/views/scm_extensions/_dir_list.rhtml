<table class="list entries" id="browser">
<thead>
<tr id="root">
<th><%= l(:field_name) %></th>
<th><%= l(:field_filesize) %></th>
<% if @show_rev %>
<th><%= l(:label_revision) %></th>
<% end %>
<th><%= l(:label_age) %></th>
<% if !@repository.is_a?(Repository::Filesystem) %>
<th><%= l(:field_author) %></th>
<th><%= l(:field_comments) %></th>
<% end %>
</tr>
</thead>
<tbody>
<%= render :partial => 'scm_extensions/dir_list_content' %>
</tbody>
</table>
